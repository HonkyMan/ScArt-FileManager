unit ABOUT;

interface

uses Winapi.Windows, System.Classes, Vcl.Graphics, Vcl.Forms, Vcl.Controls,
  Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls, ShellApi;

type
  TAboutBox = class(TForm)
    Panel1: TPanel;
    OKButton: TButton;
    PropFileIcon: TImage;
    ProductName: TLabel;
    Version: TLabel;
    Copyright: TLabel;
    Comments: TLabel;
    PropFileName: TLinkLabel;
    PropType: TStaticText;
    PropPlacement: TStaticText;
    PropSize: TStaticText;
    PropCreate: TStaticText;
    PropChanged: TStaticText;
    StaticText6: TStaticText;
    PropAtributes: TStaticText;
    LabelType: TLabel;
    LabelPlacing: TLabel;
    LabelSize: TLabel;
    LabelCreate: TLabel;
    LabelChanged: TLabel;
    LabelOpened: TLabel;
    CheckBoxHide: TCheckBox;
    CheckBoxArchive: TCheckBox;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  AboutBox: TAboutBox;

implementation

{$R *.dfm}

procedure TAboutBox.ShowIcon(Sender: TObject);
var Icon : hIcon;
IconIndex : word;
begin
	IconIndex := 1;
	Icon := ExtractAssociatedIcon(HInstance, PChar(FileName), IconIndex);
	// Image1.Canvas
	DrawIcon(Image1.Canvas.Handle, 0, 0, Icon);
end;

end.
 
